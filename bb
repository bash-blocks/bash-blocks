#!/usr/bin/env bash
bb_array_bbSettingsGet(){ index="${1}";printf ${bbA_bbSettings["${index}"]};};bb_array_bbSettingsSet(){ index="${1}";value="${2}";bbA_bbSettings["${index}"]="${value}";printf -v "${index}" "${value}";};bb_array_blockSettingsGet(){ index="${1}";printf ${bbA_blockSettings["${index}"]};};bb_array_blockSettingsSet(){ index="${1}";value="${2}";bbA_blockSettings["${index}"]="${value}";printf -v "${index}" "${value}";};bb_array_declareArraysBlock(){ for key in "${!bbA_blockSettings[@]}";do value=${bbA_blockSettings[${key}]};printf -v "${key}" "${value}";done;for key in "${!bbA_blockAbout[@]}";do value=${bbA_blockAbout[${key}]};printf -v "${key}" "${value}";done;};bb_array_declareBbDefaults(){ for key in "${!bbA_bbSettings[@]}";do value=${bbA_bbSettings[${key}]};printf -v "${key}" "${value}";done;};bb_array_declareBlockSoftware(){ for key in "${!bba_blockSoftware[@]}";do value=${bba_blockSoftware[${key}]};printf -v "${key}" "${value}";done;};bb_array_declareJsonAllServers(){ for key in "${!bbA_jsonAllServers[@]}";do value=${bbA_jsonAllServers[${key}]};printf -v "${key}" "${value}";done;};bb_array_declareJsonCurrentLoopServer(){ for key in "${!bbA_jsonCurrentLoopServer[@]}";do value=${bbA_jsonCurrentLoopServer[${key}]};printf -v "${key}" "${value}";done;};bb_array_setServerset(){ local serverSet="${1}";local OLDIFS=${IFS};local count=0;bb_array_bbSettingsSet "bbv_jsonServersPath" "${bbv_bbPath}blocks/${build_block}/servers_json/${bbv_jsonServers}";errMsg="json server file not found: ${bbv_jsonServers}";callMsg="${thisFunc}: line - ${LINENO}";returnCode="1";abortOnFail="true";path="${bbv_bbPath}blocks/${build_block}/servers_json/";fileOrFolder="file";fileToCheck="${bbv_jsonServers}";bb_filesFolders_fileFolderExists "${errMsg}" "${callMsg}" "${returnCode}" "${abortOnFail}" "${path}" "${fileOrFolder}" "${fileToCheck}";bb_error_isJqWellFormed "${bbv_jqFilePath} type -e ${bbv_jsonServersPath}" "json is not well formed" "${thisFunc}: line - ${LINENO}" "true";bbv_numberOfServers=$(